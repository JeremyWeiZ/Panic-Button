<Window x:Class="WpfApp1.BlueDot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" Opacity="0.5" Width="50" Height="50">
    <Ellipse Name="Dot" Width="50" Height="50" MouseUp="Ellipse_MouseUp" MouseMove="Ellipse_MouseMove">
        <Ellipse.Fill>
            <ImageBrush ImageSource="Resources/cs.png"/>
        </Ellipse.Fill>
        <Ellipse.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Show Users" Click="ShowUsers_Click"/>
                <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
            </ContextMenu>
        </Ellipse.ContextMenu>
    </Ellipse>
</Window>
